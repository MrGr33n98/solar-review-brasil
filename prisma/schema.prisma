generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum PlanType {
  free
  premium
  enterprise
}

model Company {
  id                String   @id
  name              String
  slug              String   @unique
  description       String
  logo              String
  banner            String
  rating            Float
  reviewCount       Int
  planType          PlanType
  city              String
  state             String
  specialties       String[]
  established       Int
  website           String?
  phone             String?
  verificationBadges String[]
  reviews           Review[]
  sponsored         SponsoredContent[]
}

model Review {
  id        String   @id
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String
  userName  String
  rating    Int
  comment   String
  verified  Boolean
  createdAt DateTime
  location  String
}

model SponsoredContent {
  id        String   @id
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String
  position  String
  city      String
  imageUrl  String
  title     String
  subtitle  String
  ctaText   String
  ctaUrl    String
  startDate DateTime
  endDate   DateTime
}
